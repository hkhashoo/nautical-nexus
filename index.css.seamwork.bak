
/* Improved Material-like color scheme (deep nautical + coral accent) */
/* Primary deep navy, secondary coral, supportive sea green */
:root{
  --md-primary: #0b3d91; /* deep navy */
  --md-primary-variant: #072a6b;
  --md-secondary: #ff6b6b; /* coral */
  --md-accent: #00a896; /* sea green */
  --md-surface: #ffffff;
  --md-on-surface: #052433;
  --md-bg: #f3f8fb;
  --md-elevation-1: 0 6px 18px rgba(4,12,34,0.08);
  --md-elevation-2: 0 10px 30px rgba(4,12,34,0.10);
  --md-radius: 12px;
  --md-radius-sm: 8px;
}

/* Ensure Roboto is used where available, but note local-server requirement in README */
body, button, input, select, textarea {
  font-family: 'Roboto', Inter, system-ui, -apple-system, 'Segoe UI', Arial, sans-serif;
}

