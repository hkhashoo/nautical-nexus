/* Updated theme based on provided palette */
:root{
  --primary: #f6f6f6;
  --accent: #dddddd;
  --bg: #ffffff;
  --muted: #4b5563;
  --card-shadow: 0 10px 30px rgba(3,7,18,0.12);
  --radius: 14px;
}
*{box-sizing:border-box}
body{margin:0;font-family:Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; background:linear-gradient(180deg,var(--bg), #ffffff 60%); color:#03263b; -webkit-font-smoothing:antialiased;}

/* Header */
.site-header{display:flex;align-items:center;justify-content:space-between;padding:18px 28px;background:linear-gradient(90deg,var(--primary),var(--accent));color:white}
.brand{display:flex;gap:12px;align-items:center}
.brand h1{margin:0;font-size:20px;font-weight:700}
.tag{font-size:13px;opacity:0.95}
.nav a{color:rgba(255,255,255,0.95);text-decoration:none;margin-left:14px;font-weight:600}
.nav a.cta{background:#fff;color:var(--primary);padding:8px 12px;border-radius:8px}

/* Hero */
.hero{padding:36px 0}
.hero-grid{display:grid;grid-template-columns:1fr 480px;gap:28px;align-items:center}
.hero h2{font-size:28px;margin:0 0 8px;font-weight:800}
.lead{margin:0 0 8px;color:var(--muted);font-size:15px}
.authority{font-size:13px;color:var(--muted);background:rgba(255,255,255,0.7);padding:10px;border-radius:8px;border-left:4px solid var(--primary)}
.hero-art{width:100%;height:320px;border-radius:12px;overflow:hidden;box-shadow:var(--card-shadow)}
.hero-art img{width:100%;height:100%;object-fit:cover}

/* Cards */
.container{max-width:1100px;margin:0 auto;padding:28px}
.cards{display:grid;grid-template-columns:repeat(3,1fr);gap:18px}
.card{background:#fff;padding:18px;border-radius:10px;box-shadow:var(--card-shadow);border-left:6px solid var(--primary)}
.card h4{margin:0 0 10px;font-size:16px}
.card ul{margin:0;padding-left:18px;color:var(--muted)}

/* DNS */
.dns{padding:18px 0;background:linear-gradient(180deg, rgba(0,0,0,0.02), transparent);}

/* Steps */
.steps{counter-reset:step;display:grid;gap:12px}
.steps li{list-style:none;padding:12px;border-radius:10px;background:rgba(255,255,255,0.9);border:1px solid rgba(0,0,0,0.04)}
.steps li:before{counter-increment:step;content:counter(step);display:inline-block;width:28px;height:28px;border-radius:6px;background:var(--primary);color:white;line-height:28px;text-align:center;margin-right:10px}

/* Instagram grid */
.instagram{padding:28px 0}
.ig-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:12px}
.ig-item img{width:100%;height:220px;object-fit:cover;border-radius:8px;display:block}

/* Contact */
.contact-card{padding:18px;border-radius:10px;background:#fff;box-shadow:var(--card-shadow)}
.row{display:flex;gap:12px}
input,select,button{font:inherit;padding:10px;border-radius:8px;border:1px solid rgba(0,0,0,0.06)}
.btn-primary{background:linear-gradient(90deg,var(--accent),var(--primary));color:white;padding:10px 14px;border-radius:8px;text-decoration:none;border:none}

/* Footer */
.site-footer{padding:16px;text-align:center;color:var(--muted)}

/* Reveal animation */
.reveal{opacity:0;transform:translateY(12px);transition:opacity 520ms ease, transform 520ms ease}
.reveal.visible{opacity:1;transform:none}

/* Responsive */
@media (max-width:980px){.hero-grid{grid-template-columns:1fr;} .cards{grid-template-columns:1fr} .ig-grid{grid-template-columns:repeat(2,1fr)}}
@media (max-width:520px){.ig-grid{grid-template-columns:1fr} .brand h1{font-size:16px} .hero h2{font-size:20px}}
